{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="sub_page">
  <div class="hero_area">
    <!-- header section strats -->
     {{include('_forms/_header.html.twig')}}
    <!-- end header section -->
  </div>

  <!-- nav section -->
   {{include('_menus/_navbar.html.twig')}}
  <!-- end nav section -->


  <!-- contact section -->
  <section class="contact_section layout_padding">
    <div class="container-fluid">
      <div class="row">
        <div class="offset-lg-2 col-md-10 offset-md-1">
          <div class="heading_container">
            <hr>
            <h4>Mes factures</h4>
          </div>
        </div>
      </div>
      <div class="layout_padding2-top">
        <div class="row">
        <div class="col-lg-3">
            {{include("_menus/_menu_vertical_user.html.twig")}}
            </div>
            <div class="col-lg-8">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Références</th>
                                <th>Date</th>
                                <th>Prix TTC</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {#  si l'utilisateur n'a pass commandé on n'est pas consulter sa facture #}
                            {% set commandUser = 0 %}
                            {% if commandUser== 0 %}
                                <tr>
                                    <td colspan="4"><center>Ancunne facture actuellement.</center></td>
                                </tr>
                            {% endif %}
                            {% for facture in 0..1 %}
                            <tr>
                                <td>ref : {#{ facture.reference }#}</td>
                                <td>05-08-2020 {#{ facture.date|date('d/m/Y') }#}</td>
                                <td>{#{ facture.commande.prixTTC }#} 140 €</td>
                                <td><a href="{#{ path('adminShowFacture', { 'id' : facture.id }) }#}" target="_blank"><i class="icon-refresh"></i></a></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                 </table>
            </div>
        </div>
          </div>
        </div>
  </section>
  <!-- end contact section -->

  <!-- info section -->
   {{include('_forms/_infos.html.twig')}}
  <!-- end info section -->

    <!-- footer section -->
    {{include('_forms/_footer.html.twig')}}
    <!-- end footer section -->
   </div>
{% endblock %}