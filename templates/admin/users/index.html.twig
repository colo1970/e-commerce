{% extends 'admin/menus_admin.html.twig' %}
   {% block body_admin %}
    <h4>Liste Utilisateurs</h4>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>
                    {# le teste c'est pour afficher l'icon consulter si l'utilisateur possede une adresse #}
                    {% if user.userAdresses|length != 0 %}
                        <a href="{{ path('admin_adresses_users', { 'id': user.id }) }}" title="Consulter les adresses"><i class="icon-book">Adresses</i></a> |
                    {% endif %}
                          {# le teste c'est pour afficher l'icon consulter si l'utilisateur possede une commande #}
                    {% if user.commandes|length != 0 %}
                        <a href="{{ path('admin_factures_users', { 'id': user.id }) }}" title="Consulter les factures"><i class="icon-book">Factures</i></a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
