{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h4>Produits</h4>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prixht</th>
                <td>{{ produit.prixht }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Poids</th>
                <td>{{ produit.poids }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ produit.disponibilite ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>DateCreaAt</th>
                <td>{{ produit.dateCreaAt ? produit.dateCreaAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_produits_index') }}">Liste Produit</a>

    <a href="{{ path('admin_produits_edit', {'id': produit.id}) }}">Editer</a>

    {#{ include('produits/_delete_form.html.twig') }#}
{% endblock %}
