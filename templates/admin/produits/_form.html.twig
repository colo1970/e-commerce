{{ form_start(form) }}
    <div class="form-row">
        <div class="form-group col-md-7">
            <label for="nom">Nom</label>
            {{ form_widget(form.nom, {'attr':{'class':'form-control'}})}}
        </div>
    </div>
     <div class="form-row">
        <div class="form-group col-md-2">
            <label for="prix">Prix HT</label>
            {{ form_widget(form.prixht, {'attr':{'class':'form-control'}})}}
        </div>
        <div class="form-group col-md-2">
            <label for="nom">Quantité</label>
            {{ form_widget(form.quantite, {'attr':{'class':'form-control'}})}}
        </div>
        <div class="form-group col-md-2">
            <label for="poids">Poids</label>
            {{ form_widget(form.poids, {'attr':{'class':'form-control'}})}}
        </div>
        <div class="form-group col-md-1">
            <label for="poids">Disponible</label>
            {{ form_widget(form.disponibilite, {'attr':{'class':'form-control'}})}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="tva">Tva</label>
             {{ form_widget(form.tva, {'attr':{'class':'form-control'}})}}
        </div>
        <div class="form-group col-md-2">
            <label for="categorie">Catégorie</label>
            {{ form_widget(form.categorie, {'attr':{'class':'form-control'}})}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-7">
            <label for="image">Image</label>
            {{ form_widget(form.image.imageFile, {'attr':{'class':'form-control'}})}}
                 {% if produit.image %} 
                    <img src="{{ vich_uploader_asset(produit.image, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height:auto;">
                    {% else %}
                    <img src="{{ '/images/empty.jpg' | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height:auto;">
                {% endif %}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-10">
            <label for="description">Description</label>
            {{ form_widget(form.description, {'attr':{'class':'form-control'}})}}
        </div>
    </div>
    <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}

