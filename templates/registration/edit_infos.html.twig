{% extends 'base.html.twig' %}

{% block title %}Modifier mot de passe{% endblock %}

{% block body %}
<div class="sub_page">
  <div class="hero_area">
    <!-- header section strats -->
     {{include('_forms/_header.html.twig')}}
    <!-- end header section -->
  </div>

  <!-- nav section -->
     {{include('_menus/_navbar.html.twig')}}
  <!-- end nav section -->


  <!-- contact section -->
  <section class="contact_section layout_padding">
    <div class="container-fluid">
      <div class="row">
        <div class="offset-lg-2 col-md-10 offset-md-1">
          <div class="heading_container">
            <hr>
            <h4>Modifier mes infos </h4>
          </div>
        </div>
      </div>
      <div class="layout_padding2-top">
        <div class="row">
           {{include("_menus/_menu_vertical_user.html.twig")}}
           {{form_start(form)}}
              <div class="contact_form-container">
                <div>
                    {{form_widget(form.nom)}}
                  </div>
                  <div>
                     {{form_widget(form.prenom)}}
                  </div>
                  <div>
                     {{form_widget(form.email)}}
                  </div>
                  <div>
                     {{form_widget(form.telephone)}}
                  </div>
                  <div>
                    <button type="submit">Modifier</button>
                  </div>
                </div>
              </div>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
      </div>
    </div>
  </section>
  <!-- end contact section -->

  <!-- info section -->
   {{include('_forms/_infos.html.twig')}}
  <!-- end info section -->

    <!-- footer section -->
    {{include('_forms/_footer.html.twig')}}
    <!-- end footer section -->
   </div>
{% endblock %}