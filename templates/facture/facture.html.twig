{% extends 'base.html.twig' %}
{% block title %}Facture{% endblock %}
{% block body %}
<div class="sub_page">
  <div class="hero_area">
    <!-- header section strats -->
     {{include('_forms/_header.html.twig')}}
    <!-- end header section -->
  </div>

  <!-- nav section -->
  {{include('_menus/_navbar.html.twig')}}
  <section class="contact_section layout_padding">
    <div class="container-fluid">
        <div class="row">
            <div class="offset-lg-2 col-md-10 offset-md-1">
                <div class="heading_container">
                    <hr>
                    <h5>Factures</h5>
                </div>
            </div>
        </div>
        <div class="layout_padding2-top">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    {{include("_menus/_menu_vertical_user.html.twig")}}
                </div>
                <div class="col-lg-8 col-md-8">  
                    <h2>Factures</h2>
                <form>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Références</th>
                                <th>Date</th>
                                <th>Prix TTC</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if factures|length == 0 %}
                                <tr>
                                    <td colspan="4"><center>Ancunne facture actuellement.</center></td>
                                </tr>
                            {% endif %}
                            {% for facture in factures %}
                            <tr>
                                <td>ref : {{ facture.reference }}</td>
                                <td>{{ facture.dateAt|date('d/m/Y') }}</td>
                                <td>{{ facture.itemsCommandes.prixTTC }} €</td>
                                <td><a href="{{ path('user_facture_pdf', { 'id' : facture.id }) }}" target="_blank"><i class="fa fa-refresh" aria-hidden="true"></i></a></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </form>

            </div>
        </div>        
    </div>
  </section>
  <!-- end contact section -->
   
  <!-- info section -->
   {{include('_forms/_infos.html.twig')}}
  <!-- end info section -->

    <!-- footer section -->
    {{include('_forms/_footer.html.twig')}}
    <!-- end footer section -->
  </div>
{% endblock %}