{% extends 'base.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
   <div class="container">
    <div class="row">			
            <div class="span9">
                
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-errors">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                
                <h2>Factures</h2>
                <form>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Références</th>
                                <th>Date</th>
                                <th>Prix TTC</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if factures|length == 0 %}
                                <tr>
                                    <td colspan="4"><center>Ancunne facture actuellement.</center></td>
                                </tr>
                            {% endif %}
                            {% for facture in factures %}
                            <tr>
                                <td>ref : {{ facture.reference }}</td>
                                <td>{{ facture.dateAt|date('d/m/Y') }}</td>
                                <td>{{ facture.itemsCommandes.prixTTC }} €</td>
                                <td><a href="{{ path('user_facture_pdf', { 'id' : facture.id }) }}" target="_blank"><i class="icon-refresh">facture</i></a></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </form>

            </div>

        </div>
    </div>

{% endblock %}
