{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
<script src="https://use.fontawesome.com/c560c025cf.js"></script>
<link href="css/panier.css" rel="stylesheet" />
<div class="sub_page">
  <div class="hero_area">
    <!-- header section strats -->
     {{include('_forms/_header.html.twig')}}
    <!-- end header section -->
  </div>

  <!-- nav section -->
    {{include('_menus/_navbar.html.twig')}}
  <!-- end nav section -->


  <!-- contact section -->
  <section class="contact_section layout_padding">
    <div class="container-fluid">
      {% set totalHT = 0 %}
{% set totalTTC = 0%}
{% set refTva = {} %}
{% for produit in produits %}
    {% set refTva = refTva|merge({ ('%' ~ produit.tva.valeur) : 0 }) %}
{% endfor %}


<div class="container">
    <div class="row">        
        <div class="span9">            
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            
            <h2>Valider mon panier</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Références</th>
                        <th>Quantité</th>
                        <th>Prix unitaire</th>
                        <th>Total HT</th>
                    </tr>
                </thead>
                <tbody>
                    {% if produits|length == 0 %}
                        <tr>
                            <td colspan="4"><center>Aucun articles dans votre panier</center></td>
                        </tr>
                    {% endif %}
                    
                    {% for produit in produits %}
                    <tr>
                        <form action="{{path('commande_commande')}}" method="get">
                            <td>{{ produit.nom }}</td>
                            <td>
                                {{ panier[produit.id] }}
                            </td>
                            <td>{{ produit.prixht }} €</td>
                            <td>{{ produit.prixht * panier[produit.id] }} €</td>
                        </form>
                    </tr>
                    
                    {% set totalHT = totalHT + (produit.prixht * panier[produit.id]) %}
                    {% set totalTTC = totalTTC + (produit.prixht * panier[produit.id])|calculTtcProduit(produit.tva.multiplicateur) %}
                    {% set refTva = refTva|merge({ ('%' ~ produit.tva.valeur) : refTva['%' ~ produit.tva.valeur] + ( produit.prixht * panier[produit.id])|montantTva(produit.tva.multiplicateur) }) %}
                    {% endfor %}
                </tbody>
            </table>
            
            <dl class="dl-horizontal pull-right">
                <dt>Total HT :</dt><dd>{{ totalHT }} €</dd>
                
                {% for key, tva in refTva %}
                    <dt>TVA {{ key }} :</dt><dd>{{ tva }} €</dd>
                {% endfor %}

                <dt>Total TTC :</dt><dd>{{ totalTTC }} €</dd>
            </dl>
            
            <div class="span3 pull-left">
                <dl class="pull-left">
                    <dt><h4>Adresse de livraison</h4></dt>
                    <dt>{{ livraison.prenom }} {{ livraison.nom }}</dt>
                    <dt>{{ livraison.adresse }}</dt>
                    <dt>{{ livraison.cp }} {{ livraison.ville }} - {{ livraison.pays }}</dt>
                </dl>
            </div>
            
            <div class="span3 pull-left">
                <dl class="pull-left">
                    <dt><h4>Adresse de facturation</h4></dt>
                    <dt>{{ facturation.prenom }} {{ facturation.nom }}</dt>
                    <dt>{{ facturation.adresse }}</dt>
                    <dt>{{ facturation.cp }} {{ facturation.ville }} - {{ facturation.pays }}</dt>
                </dl>
            </div>
            
            <div class="clearfix"></div>
            <a href="{{ path('commande_commande')}}" class="btn btn-success pull-right">Payer</a>
            <a href="{{ path('panier_valide_adresse') }}" class="btn btn-primary">Retour</a>
        </div>
    </div>
</div>


    </div>
  </section>
  <!-- end contact section -->

  <!-- info section -->
   {{include('_forms/_infos.html.twig')}}
  <!-- end info section -->

    <!-- footer section -->
    {{include('_forms/_footer.html.twig')}}
    <!-- end footer section -->
   </div>
{% endblock %}